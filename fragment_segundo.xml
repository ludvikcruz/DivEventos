<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textNomeDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Aluno"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textIdadeDetalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idade do Aluno"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDetalhesAdicionais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalhes Adicionais:"
            android:textSize="16sp"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/textDetalhesTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Texto de Detalhes Aqui"
            android:textSize="14sp"
            android:paddingTop="4dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>